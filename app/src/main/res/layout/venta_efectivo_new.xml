<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/abc_list_selector_background_transition_holo_dark">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="SELECCIONE ORIGEN"
            android:textSize="19dip"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout"
        android:layout_marginTop="85dp">

      <Spinner
            android:id="@+id/spinner"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginLeft="110dp"
            android:backgroundTint="@color/white"
            android:spinnerMode="dialog"
            android:overlapAnchor="true"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            />
        <!-- style="@style/Base.Widget.AppCompat.Spinner.Underlined"-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/abc_list_selector_background_transition_holo_dark">


        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"

            android:text="SELECCIONE DESTINO"
            android:textSize="19dip"
            android:textColor="@color/white"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="225dp"
     >

        <ListView
            android:id="@+id/listaPuntos"
            android:layout_width="215dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="68dp"
            android:descendantFocusability="beforeDescendants"
            android:choiceMode="singleChoice"
            android:background="@android:color/holo_red_light"
            android:backgroundTint="@android:color/holo_red_light"
            android:cacheColorHint="@android:color/holo_red_light"
            android:fadingEdge="none"


            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="425dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/primary"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:textColor="@color/white"
            android:text="GENERAR PASAJE"
            android:clickable="true" />


    </LinearLayout>



</RelativeLayout>
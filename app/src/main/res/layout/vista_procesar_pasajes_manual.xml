<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <TextView
            android:id="@+id/txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:text="Procesar Pasajes Vendidos"
            android:textSize="20dip"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/cash"
            android:textStyle="bold"
            />

    </android.support.design.widget.AppBarLayout>

    <Button android:id="@+id/manual"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="145dp"
        android:background="@drawable/buscar_negro"
        android:layout_alignTop="@+id/view"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="65dp"
        android:background="#9eff8c8c">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="38dp"

            android:text="PROCESAR PASAJES MANUALMENTE"
            android:textSize="18dip"
            android:textStyle="bold"
            android:textColor="@color/white" />


    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:id="@+id/view"></android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/confirmarManual"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:layout_marginBottom="61dp"
        android:padding="12dp"
        android:textColor="@color/white"
        android:text="CONFIRMAR"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText android:id="@+id/codigoPasaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresar codigo del pasaje"
        android:layout_marginTop="295dp"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:textColorLink="@color/black"
        android:textColorHighlight="@color/black"

        android:layout_alignStart="@+id/view"
        android:layout_alignEnd="@+id/view" />


</RelativeLayout>